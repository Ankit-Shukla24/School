header.header 
    nav.nav.nav--main
        a#back-btn
            i(class="fa-solid fa-circle-arrow-left fa-1x  small-invisible")
        a.nav--link(href="/") Main Page 
    .header--logo 
        img(src="http://pngimg.com/uploads/student/student_PNG25.png" alt="")
    nav.nav.nav--user 
    
        if user 
            a.nav--link.nav--link--logout.nav--user--link Logout
            a.nav--link.nav--user--link(href="/me")= `${user.username}` 
        else 
            a.nav--link.nav--user--link(href="/login") Login
            a.nav--link.nav--user--link(href="/signup") Sign Up

