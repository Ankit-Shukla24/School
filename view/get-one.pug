extend base

block content
    .form-div
        form#get-one-form.get-form
            p Enter the required data
            label(for="year") Enter Year
            input#year(type="text" name="Enter-year" placeholder="20**")
            label(for="student-class") Enter Class
            select#student-class(name="Enter-class")
                option(value="PG") PG
                option(value="LKG") LKG
                option(value="UKG") UKG
                option(value="1st") 1st
                option(value="2nd") 2nd
                option(value="3rd") 3rd
                option(value="4th") 4th
                option(value="5th") 5th
                option(value="6th") 6th
                option(value="7th") 7th
                option(value="8th") 8th 
                option(value="") All
            label(for="name") Enter Student's name
            input#name(type="text" name="Enter-student-name" placeholder="Enter student's name")
            input#submit-one(type="submit" name="submit" value="Submit")