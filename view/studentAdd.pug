extend base


block content
    .form-div-data.add-student
        form#get-student-data.get-form
            label(for="student-year") Year
            input#student-year(type="text" name="year")
            br
            label(for="student-class") Class
            select#student-class(name="Enter-class")
                option(value="0") PG
                option(value="1") LKG
                option(value="2") UKG
                option(value="3") 1st
                option(value="4") 2nd
                option(value="5") 3rd
                option(value="6") 4th
                option(value="7") 5th
                option(value="8") 6th
                option(value="9") 7th
                option(value="10") 8th
            br
            label(for="student-roll_no") Roll No.
            input#student-roll_no(type="text" name="roll_no")
            br
            label(for="student-name") Student's name
            input#student-name(type="text" name="name" )
            br
            label(for="student-father") Father's name
            input#student-father(type="text" name="name" )
            br
            label(for="student-dob") Date of birth
            input#student-dob(type="date" name="name" )
            input#submit-all(type="submit" name="add" value="Submit")            
        